.column.column-center(ng-controller='AdminController as adminCtrl' ng-hide='showSpinner')
  h1.title-3.text-base.blue.m-bottom-3
    | {{ 'ADD_PROGRAM' | translate | uppercase }}
  form(
    name='adminCtrl.addProgramForm'
    novalidate
    ng-submit='adminCtrl.addProgram()'
  )
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'PROGRAM_NAME' | translate }}
      input.input-base.m-bottom-5(name='name' ng-model='adminCtrl.newProgram' required ng-change='adminCtrl.validate()')
  .row.row-center
    a.button-grey.m-right-3(type='button' ng-href='#/profile')
      | {{ 'CANCEL' | translate }}
    button.button-blue(ng-click='adminCtrl.next()' ng-disabled='!adminCtrl.canContinue')
      | {{ 'NEXT' | translate }}
