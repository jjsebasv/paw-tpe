<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>ar.edu.itba.paw.models.Client</class>
        <class>ar.edu.itba.paw.models.Course</class>
        <class>ar.edu.itba.paw.models.CourseProgramRelation</class>
        <class>ar.edu.itba.paw.models.Document</class>
        <class>ar.edu.itba.paw.models.Program</class>
        <class>ar.edu.itba.paw.models.Review</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/pawdb"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
