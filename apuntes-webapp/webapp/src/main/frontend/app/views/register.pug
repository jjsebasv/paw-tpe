.column.column-center(ng-controller='RegisterController as registerCtrl')
  h1.title-3.text-base.green.m-bottom-3
    | {{ 'REGISTER_ME' | translate | uppercase }}
  form(
    name='RegisterController.registerForm'
    novalidate
    ng-submit='RegisterController.register()'
  )
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'NAME' | translate }}
      input.input-base.m-bottom-2(name='user' ng-model='registerCtrl.userName' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'LAST_NAME' | translate }}
      input.input-base.m-bottom-2(name='user' ng-model='registerCtrl.userLastname' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'USER' | translate }}
      input.input-base.m-bottom-2(name='user' ng-model='registerCtrl.username' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'MAIL' | translate }}
      input.input-base.m-bottom-2(name='email' type='email' ng-model='registerCtrl.mail' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'PASSWORD' | translate }}
      input.input-base.m-bottom-5(name='password' type='password' ng-model='registerCtrl.password' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'RE_PASSWORD' | translate }}
      input.input-base.m-bottom-5(name='repeat-password' type='password' required)
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'UNIVERSITY' | translate }}
      select.form-input(
        chosen
        ng-model='registerCtrl.selectedUniversity'
        ng-options='university.universityId as university.name for university in registerCtrl.universities'
        ng-change='registerCtrl.getPrograms()'
        required
      )
        option(value='')
          | {{ 'CHOOSE_UNIVERSITY' | translate }}
    .column.column-left
      label.text-5.text-base.grey-2.m-bottom-1
        | {{ 'PROGRAM' | translate }}
      select.form-input(
        chosen
        ng-model='registerCtrl.selectedProgram'
        ng-options='program.programid as program.name for program in registerCtrl.programs'
        ng-disabled='!registerCtrl.selectedUniversity'
        required
      )
        option(value='')
          | {{ 'CHOOSE_PROGRAM' | translate }}
  .row.row-center
    button.button-grey.m-right-3()
      | {{ 'CANCEL' | translate }}
    button.button-blue(ng-click='registerCtrl.register()')
      | {{ 'REGISTER_ME' | translate }}
