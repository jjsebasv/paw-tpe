div(ng-controller="ProgramController as pgrmCtrl")
  //- Should display all courses
  .column.column-center
    .row.section-header
      .item
        h1.title-3.text-base.green.m-bottom-1
          | {{pgrmCtrl.program.name}}
    .row.m-bottom-3
      span.m-right-1.bold.text-base
        | {{ pgrmCtrl.courses.length }}
      span
        | {{ 'COURSES' | translate }}
    .row.m-bottom-3.section-search
      back(data='indexCtrl.getBack()' goto='indexCtrl.goto(toType, toId, fromName)')
      searchbox(filter='searchText' placeholder="'SEARCH_COURSE'")
    .list-wrapper.column.column-center.list-wide(ng-repeat='course in pgrmCtrl.courses | filter:searchText')
      course(name='course.name' code='course.code' id='course.courseid' goto='indexCtrl.goto(toType, toId, fromName)' from='pgrmCtrl.program.name')
