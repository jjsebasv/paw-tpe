
.column.column-center(ng-controller='CourseController as courseCtrl' ng-hide='showSpinner')
  .row.m-bottom-3.section-header
    .item
      h1.title-3.text-base.green
        | {{courseCtrl.course.name}}
    .bar
    .item
      h1.title-3.text-base
        | {{courseCtrl.course.code}}
  .row.m-bottom-3.section-search
    back(data='indexCtrl.getBack()' goto='indexCtrl.goto(toType, toId, fromName)')
    searchbox(filter='searchText' placeholder="'SEARCH_FILE'")
  span(ng-switch='courseCtrl.documents.length')
    .row.no-files(ng-switch-when='0')
      span.text
        | {{ 'NO_FILES' | translate }}
      a.primary-button(
        type='button'
        ng-href='#!/upload/{{courseCtrl.course.courseid}}'
        ng-click='indexCtrl.goto("course", courseCtrl.course.courseid, "Course")')
        | {{ 'UPLOAD' | translate }}
    .list-wrapper.list-wide(ng-switch-default ng-repeat='document in courseCtrl.documents | filter:searchText')
      document(name='document.documentName' author='document.userid' id='document.documentId' goto='indexCtrl.goto(toType, toId, fromName)' from='courseCtrl.course.name')
