.back(ng-click="appCtrl.goTo('^.document', courseCtrl.backReference)")
  | < Volver
.column.column-center
  h1.title-3.text-base.green.m-bottom-3
    | Materia 1
  .row
    input.input-base(ng-model='searchText' placeholder='Buscar apunte')
    input.input-submit.search(type='submit' value='')
  .list-wrapper.row.row-space-between(ng-repeat='document in uniCtrl.documents | filter:searchText')
    course(name='document.name' code='document.id' ng-click="appCtrl.goTo('^.document', document.urlParam)")
      .list-item.column
        .default-book.m-bottom-1
          img(src='images/default_book.svg')
        h3.title-2.text-base.black
          | {{document.name}}
        h4.text-base.grey.text-2
          | {{docuement.autor}}
