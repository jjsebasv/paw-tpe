div(ng-controller='UniversityController as uniCtrl')
  .back(ng-click="appCtrl.goTo('^.home', null)")
    | < Volver
  .column.column-center
    h1.title-3.text-base.green.m-bottom-3
      | {{uniCtrl.university.name}}
    search-box(filter-model='searchText' placeholder='Buscar carreras')
    .list-wrapper.row.row-space-between(ng-repeat='program in uniCtrl.programs | filter:searchText')
      program(name='program.name' id='program.programid')
