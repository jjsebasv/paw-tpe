div(ng-controller='UniversityController as uniCtrl' ng-hide='showSpinner')
  .column.column-center
    .row.section-header
      .item
        h1.title-3.text-base.green.m-bottom-3
          | {{uniCtrl.university.name}}
    .row.m-bottom-3.section-search
      back(data='indexCtrl.getBack()' goto='indexCtrl.goto(toType, toId, fromName)')
      searchbox(filter='searchText' placeholder="'SEARCH_PROGRAM'")
    .list-wrapper.column.column-center.list-wide(ng-repeat='program in uniCtrl.programs | filter:searchText')
      program(name='program.name' id='program.programid' goto='indexCtrl.goto(toType, toId, fromName)' from='uniCtrl.university.name')
