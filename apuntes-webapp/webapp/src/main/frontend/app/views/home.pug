//- This is the home view
.column.column-center(ng-controller = "HomeController as homeCtrl")
  .section-header
    .item
      h1.title-3.text-base.green.m-bottom-3
        | {{ 'UNIVERSITIES' | translate }}
    .item
      a.m-right-1.action(type='button' ng-href='#!/mail')
        | send mail
  .row.m-bottom-3.section-search
    searchbox(filter='searchText' placeholder="'SEARCH_UNIVERSITY'")
  .list-wrapper.list-wide(ng-repeat='uni in homeCtrl.universities | filter:searchText')
    university(name='uni.name' id='uni.universityId' goto='indexCtrl.goto(toType, toId, fromName)')
